{
  "name": "no-bundlers",
  "author": "CJ Lazell",
  "license": "MIT",
  "version": "0.0.1",
  "description": "No webpack, parceljs, browserify etc... just the future!",
  "main": "script.js",
  "scripts": {
    "dev": "run-p scss:watch postcss:watch pika-web live-server",
    "live-server": "live-server src --no-browser --ignorePattern=src/scss --entry-file=index.html",
    "pika-web": "pika-web --optimize --dest src/web_modules",
    "copyfiles": "cpy '**/*.*' '../dist/' --cwd=src --parents",
    "prerender": "react-snap",
    "clean": "rimraf dist",
    "purgecss": "purgecss --config ./purgecss.config.js -o dist/css",
    "minify": "node minify",
    "uglifyjs": "uglifyjs-folder dist -ey -o dist -x .js -p **/*.js,!web_modules/**/*.js",
    "build": "run-s clean scss:build postcss:build pika-web copyfiles minify prerender purgecss",
    "postcss:build": "postcss .css/ --dir src/css --include-dotfiles",
    "postcss:watch": "run-s \"postcss:build -- --watch\"",
    "scss:build": "node-sass-chokidar src/scss -o .css --include-path node_modules --include-path src/scss",
    "scss:watch": "run-p \"scss:build -- --watch\"",
    "netlify:deploy": "netlify deploy",
    "netlify:deploy:prod": "netlify deploy --prod",
    "deploy": "run-s build netlify:deploy",
    "deploy:prod": "run-s build netlify:deploy:prod",
    "prettier": "pretty-quick --staged",
    "lint": "run-p lint:js lint:css",
    "lint:js": "eslint --ignore-path .eslintignore . --fix",
    "lint:css": "stylelint '**/*.{less,scss,css}' --fix",
    "postinstall": "patch-package"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run lint:js",
      "git add"
    ],
    "*.{css,scss}": [
      "npm run lint:css",
      "git add"
    ]
  },
  "@pika/web": {
    "webDependencies": [
      "htm",
      "preact",
      "preact/hooks",
      "preact/compat",
      "preact-router",
      "react-bootstrap",
      "mitt"
    ]
  },
  "reactSnap": {
    "source": "dist",
    "include": [
      "/",
      "/200.html",
      "/404.html"
    ],
    "inlineCss": true,
    "minifyHtml": {
      "minifyCSS": {
        "level": {
          "1": {
            "all": true
          },
          "2": {
            "all": true
          }
        }
      },
      "minifyJS": {
        "compress": {
          "drop_console": true,
          "drop_debugger": true,
          "negate_iife": false,
          "passes": 2,
          "pure_getters": true,
          "unsafe": true,
          "unsafe_proto": true
        },
        "output": {
          "wrap_iife": true,
          "comments": false
        },
        "toplevel": true,
        "warnings": true
      },
      "collapseBooleanAttributes": true,
      "collapseWhitespace": true,
      "decodeEntities": true,
      "keepClosingSlash": true,
      "removeAttributeQuotes": true,
      "ignoreCustomComments": [],
      "removeComments": true,
      "removeEmptyAttributes": true,
      "removeRedundantAttributes": true,
      "removeScriptTypeAttributes": true,
      "removeStyleLinkTypeAttributes": true,
      "sortAttributes": false,
      "sortClassName": false
    },
    "skipThirdPartyRequests": true,
    "preconnectThirdParty": false,
    "asyncScriptTags": true
  },
  "dependencies": {
    "@brad-jones/dynamic-polyfill-sync": "^0.3.0",
    "bootstrap": "^4.3.1",
    "htm": "^2.1.1",
    "mitt": "^1.1.3",
    "preact": "^10.0.0-alpha.4",
    "preact-async-route": "^2.2.1",
    "preact-router": "^3.0.0",
    "react": "gist:023bf53da5df9ea3091210303dd1b351",
    "react-bootstrap": "^1.0.0-beta.6",
    "react-dom": "gist:6bbeadd92f28bff896d314cf0fbcbda7"
  },
  "devDependencies": {
    "@node-minify/clean-css": "^4.0.5",
    "@node-minify/core": "^4.0.5",
    "@node-minify/html-minifier": "^4.0.5",
    "@node-minify/terser": "^4.1.0",
    "@pika/web": "^0.4.1",
    "autoprefixer": "^9.5.1",
    "babel-eslint": "^10.0.1",
    "cpy": "^7.2.0",
    "cpy-cli": "^2.0.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-react-app": "^3.0.8",
    "eslint-find-rules": "^3.3.1",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^1.1.1",
    "eslint-plugin-flowtype": "^3.6.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.6.0",
    "glob": "^7.1.3",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "live-server": "^1.2.1",
    "netlify-cli": "^2.11.4",
    "node-sass": "^4.11.0",
    "node-sass-chokidar": "^1.3.4",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.1.1",
    "postcss-cli": "^6.1.2",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.6.0",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "purgecss": "^1.2.0",
    "react-snap": "^1.23.0",
    "rimraf": "^2.6.3",
    "stylelint": "^9.10.1",
    "stylelint-config-prettier": "^5.0.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-prettier": "^1.0.6"
  }
}
