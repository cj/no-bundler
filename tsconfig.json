{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "jsxFactory": "h",
    "allowJs": true,
    "checkJs": true,
    "baseUrl": ".",
    "paths": {
      "/*.js": ["src/*.js"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
